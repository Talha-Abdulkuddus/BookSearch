<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/detail_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/detail_image_view"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="This is probably one of the longest titles a book will have" />

        <TextView
            android:id="@+id/detail_book_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_book_title"
            android:layout_toRightOf="@id/detail_image_view"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            tools:text="I'm not actually sure how long a book's title can be to be honest." />

    </RelativeLayout>

    <View
        android:id="@+id/info_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:padding="4dp"
        android:id="@+id/info_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_book_author"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            tools:text="Author:\nSome moderately long name here" />

        <TextView
            android:id="@+id/detail_book_rating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/black"
            tools:text="Rating:\n5.0 *" />

        <TextView
            android:id="@+id/detail_book_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/black"
            tools:text="Price:\n12.99 GBP" />

    </LinearLayout>

    <View
        android:id="@+id/description_info_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <TextView
        android:id="@+id/detail_book_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="Hey, thanks for taking your time to check out the code! I'd appreciate if you could check if there's anywhere I could improve the app, that would be great. I'm just filling up this space with rubbish so that this screen will be long enough to be able to scroll through in the preview panel. So... yeah. Any feedback you can give is welcome. I don't know what else to write here so I might just copy-paste some placeholder text to make it go the rest of the way.\n\nLorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean pellentesque lectus eget porta maximus. Mauris quam ante, euismod eget ligula tincidunt, posuere maximus eros. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. In finibus bibendum elit nec gravida.\n\nDoes anyone know what that actually means???" />

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/view_on_google"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/view_on_google" />

        <Button
            android:id="@+id/preview_book"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/preview_this_book" />

    </LinearLayout>

</LinearLayout>